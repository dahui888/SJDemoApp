<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".version_10.UniqueActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Android 10适配" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:text="唯一标识码解决方案" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用硬件自身标识" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/get_device_id"
            style="@style/tv"
            android:text="DEVICE_ID"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/get_android_id"
            style="@style/tv"
            android:text="ANDROID_ID"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/get_mac_address"
            style="@style/tv"
            android:text="MAC ADDRESS"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/get_serial_number"
            style="@style/tv"
            android:text="Serial Number"
            android:textSize="10sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用自生成标识：生成 UUID保存，卸载时依然保留" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/create_uuid_1"
            style="@style/tv"
            android:text="生成UUID及存储在外部存储"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/get_uuid_1"
            style="@style/tv"
            android:text="读取外部存储"
            android:textSize="10sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/create_uuid_2"
            style="@style/tv"
            android:text="UniqueIDUtils获取唯一识别码"
            android:textSize="10sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>