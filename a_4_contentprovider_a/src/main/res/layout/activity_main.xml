<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/get_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fb742e"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:text="获取联系人信息"
        android:textColor="#ffffff" />
    <TextView
        android:id="@+id/i_custom_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fb742e"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:text="增加自定义内容提供器数据"
        android:textColor="#ffffff" />
    <TextView
        android:id="@+id/d_custom_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fb742e"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:text="删除自定义内容提供器数据"
        android:textColor="#ffffff" />
    <TextView
        android:id="@+id/u_custom_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fb742e"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:text="修改自定义内容提供器数据"
        android:textColor="#ffffff" />
    <TextView
        android:id="@+id/q_custom_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fb742e"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:text="读取自定义内容提供器数据"
        android:textColor="#ffffff" />
    <TextView
        android:id="@+id/msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>