<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/content_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:context=".MainActivity">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="基础动画"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView style="@style/tv"
                android:id="@+id/base_a1"
                android:text="平移"/>
            <TextView style="@style/tv"
                android:id="@+id/base_a2"
                android:text="缩放"/>
            <TextView style="@style/tv"
                android:id="@+id/base_a3"
                android:text="旋转"/>
            <TextView style="@style/tv"
                android:id="@+id/base_a4"
                android:text="透明"/>
            <TextView style="@style/tv"
                android:id="@+id/base_a5"
                android:text="集合"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv1"
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView style="@style/tv"
            android:layout_weight="0"
            android:layout_margin="10dp"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:id="@+id/f_tv"
            android:text="帧动画"/>
        <ImageView
            android:id="@+id/f_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="属性动画"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/object_a1"
                style="@style/tv"
                android:text="平移X" />

            <TextView
                android:id="@+id/object_a2"
                style="@style/tv"
                android:text="缩放X" />

            <TextView
                android:id="@+id/object_a3"
                style="@style/tv"
                android:text="旋转" />

            <TextView
                android:id="@+id/object_a4"
                style="@style/tv"
                android:text="透明" />

            <TextView
                android:id="@+id/object_a5"
                style="@style/tv"
                android:textSize="12sp"
                android:text="背景色修改" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/object_a6"
                style="@style/tv"
                android:text="集合" />
            <TextView
                android:id="@+id/object_a7"
                style="@style/tv"
                android:textSize="10sp"
                android:text="设置插值器与估值器" />
            <TextView
                android:id="@+id/object_a8"
                style="@style/tv"
                android:text="设置监听" />
            <TextView
                android:id="@+id/object_a9"
                style="@style/tv"
                android:textSize="12sp"
                android:text="设置每一帧监听" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:padding="5dp">
            <TextView
                android:id="@+id/object_a10"
                style="@style/tv"
                android:textSize="12sp"
                android:text="属性动画实现亮度变换" />
            <TextView
                android:id="@+id/object_a11"
                style="@style/tv"
                android:textSize="12sp"
                android:text="ValueAnimator实现亮度变换" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv2"
            android:src="@mipmap/ic_launcher"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="center"/>
    </LinearLayout>

</ScrollView>